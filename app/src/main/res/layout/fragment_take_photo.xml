<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.camera.view.CameraView
        android:id="@+id/cameraView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_height="0dp"/>

<!--    <com.fdev.instagramclone.util.cutomview.SquareImageView-->
<!--        android:id="@+id/cameraView"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        android:layout_width="match_parent"-->
<!--        app:layout_constraintDimensionRatio="1:1"-->
<!--        android:layout_height="0dp"/>-->


    <ImageView
        android:id="@+id/rotate_camera"
        android:src="@drawable/ic_rotate"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintLeft_toLeftOf="@id/cameraView"
        app:layout_constraintBottom_toBottomOf="@id/cameraView"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <ImageView
        android:id="@+id/flash_camera"
        android:src="@drawable/ic_baseline_flash_off_24"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="@id/cameraView"
        app:layout_constraintBottom_toBottomOf="@id/cameraView"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:id="@+id/outter_circle_btn"
        app:layout_constraintTop_toBottomOf="@+id/cameraView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@color/blurLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/inner_circle_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="@id/outter_circle_btn"
        app:layout_constraintBottom_toBottomOf="@id/outter_circle_btn"
        app:layout_constraintEnd_toEndOf="@id/outter_circle_btn"
        app:layout_constraintStart_toStartOf="@id/outter_circle_btn" />



</androidx.constraintlayout.widget.ConstraintLayout>